{
  "name": "simple-es/message-bus-bridge",
  "description": "A bridge for using SimpleBus MessageBus",
  "type": "library",
  "keywords": ["simple", "simplees", "simplebus", "message bus", "command bus", "event bus"],
  "homepage": "https://simple-es.github.io",
  "license": "MIT",
  "authors": [
    {
      "name": "Jasper N. Brouwer",
      "email": "jasper@future500.nl"
    }
  ],

  "require": {
    "php": ">=5.4",
    "simple-es/event-sourcing": "~1.0@dev",
    "simple-bus/message-bus": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.3",
    "mockery/mockery": "~0.9",
    "squizlabs/php_codesniffer": "~2.1"
  },

  "autoload": {
    "psr-4": {"SimpleES\\MessageBusBridge\\": "src"}
  },
  "autoload-dev": {
    "psr-4": {
      "SimpleES\\MessageBusBridge\\Test\\": "tests"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
